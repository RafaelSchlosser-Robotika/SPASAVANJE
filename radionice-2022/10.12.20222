#pragma once
#include "helper.h"
void RobotLine::radionica() {
  static int broj = 0;
  char simbol[10 + sizeof(char)];

  if (front() > 40 and front() < 120 and broj == 0) {
    go(-90, 90), delayMs(400);
    while (not lineAny()) {
      go(70, 30);
      noLoopWithoutThis();
    }
    go(40, 40), delayMs(200);
    broj++;
  }

  if (front() > 40 and front() < 120 and broj == 3) {
    go(-90, 90), delayMs(400);
    while (not lineAny()) {
      go(100, 42);
      noLoopWithoutThis();
    }
    go(40, 40), delayMs(200);
    broj++;
  }

  if (line(0) and line(8) and broj == 1) {
    go(-90, 90), delayMs(450);
    broj++;
  }
  if (line(0) and line(8) and broj == 2) {
    go (-90, 90), delayMs(450);
    broj++;
  }
  if (line(0) and line(4) and broj == 4) {
    go(90, -90), delayMs(450);
    broj++;
  }
  if (line(8) and line(0) and broj == 5) {
    go(50, 50), delayMs(450);
    broj++;
  }

  if (line(8) and line(0) and broj == 6) {
    go(-90, 90), delayMs (450);
    go(60, 60), delayMs (2000);
    broj++;
  }

  else if (lineAny()) {
    if (line(8))
      go(-90, 90);
    else if (line(0))
      go(90, -90);
    else if (line(7))
      go(0, 100);
    else if (line(1))
      go(100, 0);
    else if (line(6))
      go(30, 80);
    else if (line(2))
      go(80, 30);
    else if (line(5))
      go(40, 70);
    else if (line(3))
      go(70, 40);
    else if (line(4))
      go(70, 70);
    else
      go(70, 70);

  }


  // Ne mjenjati, sluÅ¾i za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);
}
