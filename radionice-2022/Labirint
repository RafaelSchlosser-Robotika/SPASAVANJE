#pragma once
#include "helper.h"
void RobotLine::radionica() {
  static int broj = 0;
  static int Ms=0;
   uint32_t lastLineMs = millis();
  char simbol[10 + sizeof(char)];
  armOpen();

  if (front() < 120) {
    go(-90, 90);
    delayMs(500);
  }

  if (leftFront() > 150)
    go(80, 20);
  else
    go(20, 80);



  if (rightFront()<150 and rightFront()>40) {
    stop(), delayMs(500);
    go(50, 50), delayMs(500);
    go(-90, 90), delayMs(450);
    armClose();
    while (leftFront() > 100) {
      go(20, 20);
      noLoopWithoutThis();
    }
    stop(), delayMs(2000);
    armOpen();
    go(20, 20), delayMs(2000);
    armClose(),delayMs(1000000000);
  }



  // Ne mjenjati, slu≈æi za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);
}
